<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <TextView
        android:id="@+id/main_home"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/home"
        android:ems="10"
        />

    <TextView
        android:id="@+id/main_searching"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:background="@drawable/home_searching"
        android:ems="10"
        android:layout_marginTop="265dp"
        android:layout_toLeftOf="@+id/editTextSearching"
        />

    <EditText
        android:id="@+id/editTextSearching"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="265dp"
        android:background="@drawable/home_searchingtext"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Searching"
        android:textColor="@android:color/white" />
    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="202dp"
        android:layout_height="32dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/editTextSearching"/>



    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="200dp"
        android:layout_height="33dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/editTextSearching"/>


    <Button
        android:id="@+id/btnaddtask"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/addtask"
        android:onClick="onAddItemClick" />

    <Button
        android:id="@+id/btnTask"
        android:layout_width="136dp"
        android:layout_height="65dp"
        android:background="@drawable/taskbutton"
        android:layout_toRightOf="@id/btnRunner"
        android:layout_alignParentBottom="true"
        android:onClick="onAddItemClick"/>

    <Button
        android:id="@+id/btnRunner"
        android:layout_width="138dp"
        android:layout_height="65dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="0dp"
        android:background="@drawable/runnerbutton"
        android:onClick="onAddItemClick" />

    <Button
        android:id="@+id/btnMe"
        android:layout_width="138dp"
        android:layout_height="65dp"
        android:background="@drawable/mebutton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:onClick="onAddItemClick"/>

    <GridView
        android:id="@+id/gvTask"
        android:layout_width="408dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner1"
        android:layout_above="@+id/btnRunner"
        android:numColumns="auto_fit"
        android:columnWidth="80dp"
        android:horizontalSpacing="10dp"
        android:verticalSpacing="10dp">
    </GridView>








</RelativeLayout>