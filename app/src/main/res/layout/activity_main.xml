<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home">


    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="202dp"
        android:layout_height="32dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/editTextSearching"/>



    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="200dp"
        android:layout_height="33dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/editTextSearching"/>

    <EditText
        android:id="@+id/editTextSearching"
        android:layout_width="274dp"
        android:layout_height="39dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Searching"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="305dp" />

    <Button
        android:id="@+id/btnaddtask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/addtask"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:onClick="onAddItemClick"/>

    <Button
        android:id="@+id/btnTask"
        android:layout_width="136dp"
        android:layout_height="65dp"
        android:background="@drawable/taskbutton"
        android:layout_toRightOf="@id/btnRunner"
        android:layout_alignParentBottom="true"
        android:onClick="onAddItemClick"/>

    <Button
        android:id="@+id/btnRunner"
        android:layout_width="138dp"
        android:layout_height="65dp"
        android:background="@drawable/runnerbutton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:onClick="onAddItemClick"/>

    <Button
        android:id="@+id/btnMe"
        android:layout_width="138dp"
        android:layout_height="65dp"
        android:background="@drawable/mebutton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:onClick="onAddItemClick"/>

    <GridView
        android:id="@+id/gvTask"
        android:layout_width="408dp"
        android:layout_height="290dp"
        android:layout_below="@id/spinner1"
        android:numColumns="auto_fit"
        android:columnWidth="80dp"
        android:horizontalSpacing="10dp"
        android:verticalSpacing="10dp">
    </GridView>








</RelativeLayout>