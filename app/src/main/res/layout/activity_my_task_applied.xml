<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mytask"
    >

    <Button
        android:id="@+id/btnApplied_Runner"
        android:layout_width="136dp"
        android:layout_height="65dp"
        android:background="@drawable/runnerbutton2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:onClick="onAddItemClick"
       />

    <Button
        android:id="@+id/btnApplied_Task"
        android:layout_width="136dp"
        android:layout_height="65dp"
        android:background="@drawable/taskbutton2"
        android:layout_toRightOf="@+id/btnApplied_Runner"
        android:layout_alignParentBottom="true"
        android:onClick="onAddItemClick"
        />

    <Button
        android:id="@+id/btnApplied_Me"
        android:layout_width="136dp"
        android:layout_height="65dp"
        android:background="@drawable/mebutton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:onClick="onAddItemClick"
        />

    <Button
        android:id="@+id/btnApplied_back"
        android:layout_width="53dp"
        android:layout_height="44dp"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/backbutton"
        android:onClick="onAddItemClick"
        />

    <Button
        android:id="@+id/btnApplied_addtask"
        android:layout_width="45dp"
        android:layout_height="44dp"
        android:background="@drawable/addtask"
        android:layout_alignParentRight="true"
        android:layout_marginTop="3dp"
        android:onClick="onAddItemClick"
        />

    <Button
        android:id="@+id/btnApplied_Sent"
        android:layout_width="201dp"
        android:layout_height="65dp"
        android:background="@drawable/sentbutton"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btnApplied_addtask"
        android:layout_toRightOf="@+id/btnApplied_Applied"
        android:onClick="onAddItemClick"
         />

    <Button
        android:id="@+id/btnApplied_Applied"
        android:layout_width="209dp"
        android:layout_height="65dp"
        android:background="@drawable/appliedbutton"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btnApplied_back"
        android:onClick="onAddItemClick"
        />

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="537dp"
        android:layout_below="@+id/btnApplied_Applied"
        android:layout_above="@+id/btnApplied_Runner">
    </androidx.gridlayout.widget.GridLayout>
</RelativeLayout>