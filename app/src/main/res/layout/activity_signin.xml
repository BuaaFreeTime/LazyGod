<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signin">


    <EditText
        android:id="@+id/signin_email"
        android:layout_width="305dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:shadowColor="#00FFFFFF"
        android:textColor="@android:color/black"
        android:hint="Student email/Unikey"
        android:layout_above="@+id/signin_password"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/signintext"
         />

    <EditText
        android:id="@+id/signin_password"
        android:layout_width="305dp"
        android:layout_height="45dp"
        android:layout_above="@+id/buttonsignin"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/signintext"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword" />


    //我觉得这个忘记密码应该删掉
    <TextView
        android:id="@+id/signin_forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot My Password?"
        android:textColor="@android:color/black"
        android:textSize="10sp"
        android:layout_above="@+id/buttonsignin"
        android:layout_marginBottom="3dp"
        android:layout_centerHorizontal="true"
        />


    <Button
        android:id="@+id/buttonsignin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIGN IN"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/signin_bottom"
        android:layout_marginBottom="10dp"
        android:background="#FFFFFF"
        android:onClick="onSubmit"

        />

    <TextView
        android:id="@+id/signin_bottom"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_centerHorizontal="true"
        android:text="Terms Conditions | Privacy Policy"
        android:textSize="10sp"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>