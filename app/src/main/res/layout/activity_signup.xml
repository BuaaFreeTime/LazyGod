<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signup">


    <EditText
        android:id="@+id/signup_email"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:ems="10"
        android:shadowColor="#00FFFFFF"
        android:textColor="@android:color/black"
        android:hint="Student email"
        android:layout_above="@+id/signup_phone"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/signintext"
        />

    <TextView
        android:id="@+id/signup_afteremail"
        android:layout_width="160dp"
        android:layout_height="45dp"
        android:layout_marginLeft="200dp"
        android:background="@drawable/afteremail"
        android:ems="10"
        android:layout_above="@+id/signup_phone"
        android:layout_marginBottom="15dp"

        />

    <EditText
        android:id="@+id/signup_phone"
        android:layout_width="305dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="phone"
        android:shadowColor="#00FFFFFF"
        android:textColor="@android:color/black"
        android:hint="Phone number"
        android:layout_above="@+id/signup_name"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/signintext"
        />

    <EditText
        android:id="@+id/signup_name"
        android:layout_width="305dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:shadowColor="#00FFFFFF"
        android:textColor="@android:color/black"
        android:hint="Name"
        android:layout_above="@+id/signup_password"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/signintext"
        />

    <EditText
        android:id="@+id/signup_password"
        android:layout_width="305dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="textPassword"
        android:shadowColor="#00FFFFFF"
        android:textColor="@android:color/black"
        android:hint="Password"
        android:layout_above="@+id/signup_confirm"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/signintext"
        />

    <EditText
        android:id="@+id/signup_confirm"
        android:layout_width="305dp"
        android:layout_height="45dp"
        android:layout_above="@+id/buttonsignup"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/signintext"
        android:ems="10"
        android:hint="Confirm Password"
        android:inputType="textPassword" />


    <Button
        android:id="@+id/buttonsignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIGN UP"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        android:onClick="onAddItemClick"
        />


</RelativeLayout>